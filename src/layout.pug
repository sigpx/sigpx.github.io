mixin h1(title)
  h1
    img(src='https://sigpx.org/sigpx-315x315.png')
    - if (title && title.length > 0) {
    | #{title} (
    abbr(title='Special Interest Group on Programming Experience') SIGPX
    | )
    - } else {
    | SIGPX: Special Interest Group on Programming Experience
    - }

mixin note(path)
  - const en = path && path.startsWith('en/');
  p.translation.note
    - if (en) {
    | 日本語は
    a(href=`/${path.replace(/^en\//, '')}`)
      strong こちら
    | です。
    - } else {
    | The English translation is available 
    a(href=`/en/${path}`)
      strong here
    | .
    - }

