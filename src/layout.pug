mixin bodyForCFP(date, path)
  - const en = path && path.startsWith('en/');
  section#overview
    h2 #{en ? "Overview" : "概要"}
    - if (en) {
    ul
      li
        strong Official language:
        |  #{event.details.find(d => d.label.toLowerCase().indexOf("language") >= 0).content}
      li
        strong Where:
        |  #{event.details.find(d => d.label.indexOf("Where") >= 0).content}
      li
        strong When:
        |  !{event.details.find(d => d.label.indexOf("When") >= 0).content}
    - } else {
    ul
      li
        strong 場所:
        |  #{event.details.find(d => d.label.indexOf("場所") >= 0).content}
      li
        strong 日時:
        |  #{event.details.find(d => d.label.indexOf("日時") >= 0).content}
    - }
  - if (call && date) {
  section#cfp
    h2
      | Call for Participation 
      span.gray (#{date} 掲載)
    - if (event?.callUrl) {
    p.details: a.red(href=event.callUrl) 参加登録する&#9786;
    - }
    pre!= call
  - }

