
mixin title(title)
  title #{title} | SIGPX: Special Interest Group on Programming Experience

mixin nav(title, path=null, withShare=false)
  - const encodedPath = encodeURIComponent(path);
  - const en = path && path.startsWith('en/');
  nav
    - if (withShare) {
    .share
      - if (!en) {
      a.hatena-bookmark-button(href=`https://b.hatena.ne.jp/entry/s/sigpx.org/${path}` data-hatena-bookmark-layout='standard-balloon' data-hatena-bookmark-lang='ja' title='このエントリーをはてなブックマークに追加')
        img(src='https://b.st-hatena.com/images/entry-button/button-only@2x.png' alt='このエントリーをはてなブックマークに追加' width='20' height='20' style='border: none;')
      script(type='text/javascript' src='https://b.st-hatena.com/js/bookmark_button.js' charset='utf-8' async)
      - }
      a.twitter-share-button(href=`https://twitter.com/intent/tweet?url=https%3A%2F%2Fsigpx.org%2F${path}` data-text=`${title} | SIGPX: Special Interest Group on Programming Experience` data-hashtags='sigpx' data-count='horizontal' data-counturl='https://sigpx.org') ツイート
      script.
        window.twttr = (function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0], t = window.twttr || {};
          if (d.getElementById(id)) return t;
          js = d.createElement(s);
          js.id = id;
          js.src = "https://platform.twitter.com/widgets.js";
          fjs.parentNode.insertBefore(js, fjs);
          t._e = [];
          t.ready = function(f) {
            t._e.push(f);
          };
          return t;
        }(document, "script", "twitter-wjs"));
      .fb-share-button(style='vertical-align: top' data-href=`https://sigpx.org/${path}` data-layout='button_count')
      #fb-root
      script.
        (function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.4&appId=488785607828009";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    - }
    p
      a(href='/') SIGPX#{en ? '' : ' トップページ'}
      |  
      span.gray &gt;
      |  #{title}
    hr

mixin h1(title)
  h1
    img(src='https://sigpx.org/sigpx-315x315.png')
    | #{title} (
    abbr(title='Special Interest Group on Programming Experience') SIGPX
    | )

mixin note(path)
  - const en = path && path.startsWith('en/');
  p.translation.note
    - if (en) {
    | 日本語は
    a(href=`/${path.replace(/^en\//, '')}`)
      strong こちら
    | です。
    - } else {
    | The English translation is available 
    a(href=`/en/${path}`)
      strong here
    | .
    - }

doctype html
html(lang='ja')
  block vars
    - const title = '';
    - const path = '';
  head
    block head
      +title(title)
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    meta(property='og:image' content='https://sigpx.org/sigpx-315x315.png')
    link(href='https://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css')
    link(rel='shortcut icon' href='/sigpx.ico' type='image/x-icon')
    link(rel='icon' href='/sigpx.ico' type='image/x-icon')
    link(href='/style.css' rel='stylesheet')
  body
    #wrapper
      header
        block header
          +nav(title, path, true)
          +h1(title)
          block description
          +note(path)
      block body
      footer
        hr
        block footer
          +nav(title, path)
